<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light" style="padding-bottom: 20px;">

      <%= link_to(image_tag("main_logo.png"), root_path, class: 'navbar-brand') %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent" style="width: 700px;">
      <div class="login-info">
        <div class="welcome">
        <% if current_user %>
          <% if current_user.name %>
          <%= link_to current_user.name, pages_mypage_path  %> 님 반갑습니다 <br>
          <% else current_user.nickname %>
          <%= link_to current_user.nickname, pages_mypage_path %> 님 반갑습니다 <br>
          <% end %>
        </div>
        <div class="login-info-text">
          <% else %>
          <%= link_to '로그인', new_user_session_path %> /
          <%= link_to '회원가입', new_user_registration_path %>
          <% end %>
        </div>
        <div class="create-button">
          <%= link_to '레시피 공유하기', new_post_path %>
        </div>
      </div>
    </div>
    <button class="navbar-toggler ml-auto hidden-sm-up float-xs-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    </div>
  </nav>
</div>
