<div class="container" style="text-align: center">
  <div class="wrapper">
    <div class="form-signin">
      <h2 class="form-signin-heading">로그인</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.input :email, input_html: { autocomplete: "email", class: "form-control", placeholder: "이메일" }, required: false, autofocus: true, label: false %>
        <%= f.input :password, input_html: { autocomplete: "current-password", class:"form-control", placeholder: "비밀번호" }, required: false, label: false %>

        <!-- <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "비밀번호 찾기", new_password_path(resource_name), class: "new-password" %>
        <% end %> -->

      <div class="form-actions">
        <%= f.button :submit, "로그인", class: "btn btn-lg btn-primary btn-block"%>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "회원가입", new_registration_path(resource_name), class: "btn btn-lg btn-primary btn-block", id: "new-registrantion" %>
        <% end %>

        <!-- <hr>

        <%- if devise_mapping.omniauthable? %>

        <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-lg btn-primary btn-block", id: "new-registrantion-google" do %>
        <i class="fab fa-google"></i> | 구글계정으로 로그인하기
        <% end %>

        <% end %> -->

      </div>

      <% end %> <!-- simple_form_for do |f| -->

    </div>
  </div>
</div>
