  <div class="row">
    <% @posts.with_deleted.each do |post| %>
    <div class="col-xs-12 col-sm-6 col-lg-6 col-xl-4">
      <div class="recipe-box">
          <% if post.image? %>
          <%= link_to (image_tag post.image.url, class: "recipe-index"), post %>
          <% end %>
        <ul>
          <li><%=link_to post.title.truncate(13, omission: '...'), post %></li>
            <div class="option">
              <div class="index-temperature">
                <img src="<%=asset_path 'temperature.png'%>"></img>
                <div class="text-temperature">
                <%= post.temperature %>도
                </div>
              </div>
              <div class="index-time">
                <img src="<%=asset_path 'time.png'%>"></img>
                <div class="text-time">
                <%= post.time %>분
                </div>
              </div>
              <div class="option-count">
                <i class="fas fa-heart" style="color: red; text-rendering: optimizeLegibility;"></i>
                <%= post.likes.size %>
                <i class="fas fa-eye" style="padding-left: 5px; color: cornflowerblue; text-rendering: optimizeLegibility;"></i>
                <%= "#{post.impressionist_count}" %>
              </div>
            </div>
        </ul>
      </div> <!--/recipe-box-->
    </div> <!--/col-md-3-->
    <% end %>
  </div> <!--/row-->
